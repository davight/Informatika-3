{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch - Windows",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/pokemons.exe",
            "args": ["../data/pokedex.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/",
            "environment": [
            {
                "name": "PATH",
                "value": "c:/msys64/ucrt64/bin;${env:PATH}"
            }],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "c:/msys64/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch - Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/pokemons",
            "args": ["../data/pokedex.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}
